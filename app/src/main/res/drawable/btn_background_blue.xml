<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">//눌렸을때
        <shape android:shape="rectangle">
            <solid android:color="@color/colorPrimaryDark"></solid>
            <corners android:radius="100dp"></corners>
        </shape>>
    </item>

    <item>// 정상 상태일때
        <shape android:shape="rectangle">
            <solid android:color="@color/colorBlue"> // 모양, 색깔</solid>
            <corners android:radius="100dp"> // 버튼의 모양</corners>
        </shape>
    </item>

    <item android:state_enabled="false">// 아무 동작하지 않을 때
        <shape android:shape="rectangle">
            <solid android:color="@color/colorGrayDark"> // 모양, 색깔</solid>
            <corners android:radius="100dp"> // 버튼의 모양</corners>
        </shape>
    </item>


</selector>